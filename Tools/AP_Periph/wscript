#!/usr/bin/env python
# encoding: utf-8

import fnmatch

def build(bld):
    targets = ['f103-*', 'f303-*', 'CUAV_GPS', 'ZubaxGNSS*', 'CubeOrange-periph', 'HerePro']
    valid_target = False
    for t in targets:
        if fnmatch.fnmatch(bld.env.BOARD, t):
            valid_target = True
    if not valid_target:
        return

    libraries = []
    extra_source = []
    extra_use = []
    if bld.env.BOARD == 'HerePro':
        extra_use = ['libHerePro']

        libraries = bld.ap_get_all_libraries() + [
        'Tools/AP_Periph/HerePro/*.cpp',
        'Tools/AP_Periph/HerePro/*.c'
        ]
        bld.env.prepend_value('INCLUDES', [bld.env.SRCROOT + '/modules/libcanard',
            bld.env.BUILDROOT + '/modules/libcanard/dsdlc_generated'])
        # TODO: probably make this define a common methodology for all board types
        bld.env.DEFINES += ['HAL_BOARD_AP_PERIPH_HEREPRO']
    else:
        libraries = [
        'AP_Common',
        'AP_HAL',
        'AP_HAL_Empty',
        'AP_Math',
        'AP_BoardConfig',
        'AP_Param',
        'StorageManager',
        'AP_FlashStorage',
        'AP_RAMTRON',
        'AP_GPS',
        'AP_SerialManager',
        'AP_RTC',
        'AP_Compass',
        'AP_Baro',
        'Filter',
        'AP_InternalError',
        'AP_Airspeed',
        'AP_RangeFinder',
        'AP_ROMFS',
        'AP_MSP',
        'AP_CANManager',
        'AP_Scripting'
        ]
    bld.ap_stlib(
        name= 'AP_Periph_libs',
        ap_vehicle='AP_Periph',
        ap_libraries= libraries,
        exclude_src=[
            'libraries/AP_HAL_ChibiOS/Storage.cpp'
        ]
    )

    # build external libcanard library
    bld.stlib(source='../../modules/libcanard/canard.c',
              target='libcanard')

    bld.ap_program(
        program_name='AP_Periph',
        use=['AP_Periph_libs', 'libcanard'] + extra_use,
        program_groups=['bin','AP_Periph'],
        includes=[bld.env.SRCROOT + '/modules/libcanard',
                  bld.env.BUILDROOT + '/modules/libcanard/dsdlc_generated']
    )

    bld(
        # build libcanard headers
        rule="python3 ${SRCROOT}/modules/libcanard/dsdl_compiler/libcanard_dsdlc --header_only --outdir ${BUILDROOT}/modules/libcanard/dsdlc_generated ${SRCROOT}/modules/uavcan/dsdl/uavcan ${SRCROOT}/libraries/AP_UAVCAN/dsdl/ardupilot ${SRCROOT}/libraries/AP_UAVCAN/dsdl/com",
        group='dynamic_sources',
    )
